services:
  zookeeper:
    image: confluentinc/cp-zookeeper:7.5.0
    ports:
      - "2181:2181"
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    networks:
      - bpc4msa-network

  kafka:
    image: confluentinc/cp-kafka:7.5.0
    ports:
      - "9092:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:9093,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
    depends_on:
      - zookeeper
    networks:
      - bpc4msa-network

  postgres:
    image: postgres:15-alpine
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=bpc4msa
      - POSTGRES_PASSWORD=bpc4msa_pass
      - POSTGRES_DB=audit_db
    volumes:
      - postgres-data:/var/lib/postgresql/data
    networks:
      - bpc4msa-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U bpc4msa"]
      interval: 5s
      timeout: 5s
      retries: 5

  business-logic:
    build:
      context: ./services/business-logic
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    environment:
      - KAFKA_BOOTSTRAP_SERVERS=kafka:9093
      - POSTGRES_HOST=postgres
      - POSTGRES_PORT=5432
      - POSTGRES_USER=bpc4msa
      - POSTGRES_PASSWORD=bpc4msa_pass
      - POSTGRES_DB=audit_db
    depends_on:
      kafka:
        condition: service_started
      postgres:
        condition: service_healthy
    networks:
      - bpc4msa-network

  compliance-service:
    build:
      context: ./services/compliance-service
      dockerfile: Dockerfile
    environment:
      - KAFKA_BOOTSTRAP_SERVERS=kafka:9093
      - KAFKA_EVENTS_TOPIC=business-events
      - KAFKA_VIOLATIONS_TOPIC=violations
      - RULES_FILE=/app/config/rules.json
      - RULES_CHECK_INTERVAL=10
    volumes:
      - ./config:/app/config:ro
    depends_on:
      kafka:
        condition: service_started
    networks:
      - bpc4msa-network

  audit-service:
    build:
      context: ./services/audit-service
      dockerfile: Dockerfile
    environment:
      - KAFKA_BOOTSTRAP_SERVERS=kafka:9093
      - KAFKA_TOPICS=business-events,violations
      - POSTGRES_HOST=postgres
      - POSTGRES_PORT=5432
      - POSTGRES_USER=bpc4msa
      - POSTGRES_PASSWORD=bpc4msa_pass
      - POSTGRES_DB=audit_db
    depends_on:
      kafka:
        condition: service_started
      postgres:
        condition: service_healthy
    networks:
      - bpc4msa-network

  socket-service:
    build:
      context: ./services/socket-service
      dockerfile: Dockerfile
    ports:
      - "8765:8765"
    environment:
      - KAFKA_BOOTSTRAP_SERVERS=kafka:9093
      - KAFKA_TOPICS=business-events,violations
      - WEBSOCKET_HOST=0.0.0.0
      - WEBSOCKET_PORT=8765
    depends_on:
      kafka:
        condition: service_started
    networks:
      - bpc4msa-network

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    networks:
      - bpc4msa-network

  control-api:
    build: ./services/control-api
    ports:
      - "8080:8080"
    networks:
      - bpc4msa-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 10s
      timeout: 5s
      retries: 5

networks:
  bpc4msa-network:
    driver: bridge

volumes:
  postgres-data:
